{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "Selected schema for this file"
    }
  },
  "patternProperties": {
    ".*": {
      "$ref": "#/definitions/KnownFailures"
    }
  },
  "definitions": {
    "KnownFailures": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "array",
          "items": { "$ref": "#/definitions/TestMode" }
        },
        "java": {
          "type": "array",
          "items": { "$ref": "#/definitions/TestMode" }
        },
        "python": {
          "type": "array",
          "items": { "$ref": "#/definitions/TestMode" }
        },
        "php": {
          "type": "array",
          "items": { "$ref": "#/definitions/TestMode" }
        },
        "ruby": {
          "type": "array",
          "items": { "$ref": "#/definitions/TestMode" }
        },
        "ts": {
          "type": "array",
          "items": { "$ref": "#/definitions/TestMode" }
        },
        "go": {
          "type": "array",
          "items": { "$ref": "#/definitions/TestMode" }
        }
      }
    },
    "TestMode": {
      "type": "string",
      "enum": [
        "install",
        "compile-codesamples",
        "lint-codesamples",
        "format-codesamples",
        "compile",
        "lint",
        "format",
        "test"
      ]
    }
  }
}
